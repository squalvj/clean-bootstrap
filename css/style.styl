$putih = white
$turqoise = #ecf0f1
$black = #34495e

@font-face
	font-family "roboto-b"
	src url("../font/roboto.bold.ttf") format("truetype")

@font-face
	font-family "roboto-r"
	src url("../font/roboto.regular.ttf") format("truetype")

@font-face
	font-family "roboto-l"
	src url("../font/roboto.light.ttf") format("truetype")

body
	margin 0 auto
	font-family "roboto-r"

.container-fluid
	width 100%

h1
	font-family "roboto-b"
	font-size 80px
	letter-spacing 5px
	font-weight bold
h2
	font-family "roboto-b"
	font-size 27px

h3
	font-family "roboto-l"
	font-size 15px
	
.navbar 
	-webkit-transition: all 0.6s ease-out;
	-moz-transition: all 0.6s ease-out;
	-o-transition: all 0.6s ease-out;
	-ms-transition: all 0.6s ease-out;
	transition: all 0.6s ease-out;
	display: flex;
	justify-content: center;
	.navbar-brand
		padding-top 30px
		margin-left 20px !important
		font-family "roboto-b"
		font-size 30px
	ul.dropdown-menu
		li
			width 100%;
			a
				width 100%
				height 50px
				padding-top 15px
	ul
		li
			min-width 120px
			a
				width 100%
				height 80px
				padding-top 30px
				text-align center
				font-family "roboto-b"
				font-size 18px
			

.navbar.scrolled 
	background: transparent

#section-header
	height 100vh
	width 100%
	overflow hidden
	position relative
	padding-top 100px
	color white
	span
		display block
		width 100px
		margin-left auto
		margin-right auto
		font-size 30px
	.border
		padding 20px
		border 1px solid white
		width 700px
		margin-left auto
		margin-right auto
		h2
			font-family "roboto-r"
			font-size 30px
			margin-top 10px
			margin-bottom 5px
			color $putih
			position relative
			z-index 10
			&:last-child
				font-size 22px
				padding-bottom 10px
	h1.header-up
		margin-top 200px


#section-first
	padding-top 80px
	color #34495e
	min-height 100vh
	background-color $turqoise
	h1
		position relative
		.glyphicon
			top 10px
		.border-bottom
			margin-left auto
			margin-right auto
			width 650px
			border-bottom 2px solid $black
	.trio
		margin-top 80px
		.col-md-4
			margin-bottom 50px
			a
				&:hover
					text-decoration none	
		.wrapper-circle
			width 230px
			height 230px
			border-radius 140px
			background-color transparent
			margin 0 auto
			border 1px solid $black
			position relative
			margin-bottom 50px
			h4
				font-family "roboto-b"
				color $black
			img
				margin 0 auto
				margin-top 32%
				width 65px
				
#section-second
	min-height 100vh
	background-color #83D6DE
				
@media (max-width: 766px)
	.navbar
		height 80px
		button
			margin-top 20px
		ul
			li
				background-color #f8f8f8
				border-bottom 0.5px solid $black
		ul.dropdown-menu
			li
				&:last-child
					border none
	
